<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Cloudinary\Cloudinary\Block\Catalog\CloudinaryProductGallery" name="cloudinary_product_gallery" template="Cloudinary_Cloudinary::product/gallery.phtml" ifconfig="yotpo/settings/active"/>
